@model List<SalesforceIntegrationApp.Models.Tasks>
@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Status</th>
                <th>ActivityDate</th>
                <th>Description</th>
                <th>Priority</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Subject</td>
                    <td>@task.Status</td>
                    <td>@task.ActivityDate</td>
                    <td>@task.Description</td>
                    <td>@task.Priority</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p class="text-warning">No Task records found.</p>
}