@{
    ViewData["Title"] = "Lead Metadata";
    var fields = ViewBag.Fields as List<dynamic>;
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
}
<div class="lead-metadata-bg">
    <div class="table-wrapper">
        <h4 class="text-center mb-2">Metadata</h4>
        @if (fields != null && fields.Count > 0)
    {
            <div class="scrollable-table">
                <table class="table table-bordered white-table">
                    <thead class="table-white-header sticky-top">
                    <tr>
                            <th>Label</th>
                            <th>Name</th>
                            <th>Updateable</th>
                            <th>Sortable</th>
                            <th>Createable</th>
                    </tr>
                </thead>
                    <tbody>
                    @foreach (var field in fields)
                    {
                        <tr>
                            <td>@field.label</td>
                            <td>@field.name</td>
                            <td>@field.updateable</td>
                            <td>@field.sortable</td>
                            <td>@field.createable</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end mt-4 me-4">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(currentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(currentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>

            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center">No fields to display.</div>
    }
</div> 
</div>


                    
