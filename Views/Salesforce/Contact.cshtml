@model List<SalesforceIntegrationApp.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
}
<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        box-sizing: border-box;
        overflow-x: auto;
        background-color: #f9f9f9;
    }

    .contact-container {
        width: 100%;
        padding: 0;
        margin: 0;
    }

    .contact-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
        table-layout: auto;
    }

        .contact-table th,
        .contact-table td {
            padding: 12px 16px;
            text-align: left;
            vertical-align: middle;
            border: 1px solid #dee2e6;
            white-space: nowrap;
        }

        .contact-table thead {
            background-color: #343a40;
            color: white;
        }

        .contact-table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .edit-icon,
    .delete-icon {
        display: inline-block;
        margin-right: 10px;
    }

        .edit-icon img {
            width: 20px;
            height: 20px;
            transition: transform 0.2s ease-in-out;
        }

            .edit-icon img:hover {
                transform: scale(1.2);
            }

        .delete-icon img {
            width: 20px;
            height: 20px;
            transition: transform 0.2s ease-in-out;
            filter: grayscale(100%) brightness(0.7);
        }

            .delete-icon img:hover {
                transform: scale(1.2);
                filter: none;
            }

</style>


<div class="w-100" style="padding:0; margin:0;">
    <h2 class="text-center mb-4">Contact Data</h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="contact-container">
            <table class="contact-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>@contact.Id</td>
                            <td>@contact.FirstName</td>
                            <td>@contact.LastName</td>
                            <td>@contact.Phone</td>
                            <td>@contact.Email</td>
                            <td>@contact.Title</td>
                            <td>
                                <a href="#" class="edit-icon" title="Edit"
                                   data-id="@contact.Id"
                                   data-firstname="@contact.FirstName"
                                   data-lastname="@contact.LastName"
                                   data-phone="@contact.Phone"
                                   data-email="@contact.Email"
                                   data-title="@contact.Title"
                                   data-bs-toggle="modal"
                                   data-bs-target="#editContactModal">
                                    <img src="~/icons/edit.png" alt="Edit" width="20" height="20" />
                                </a>
                                <a href="#" class="delete-icon" data-id="@contact.Id" title="Delete">
                                    <img src="~/icons/pngegg.png" alt="Delete" width="20" height="20" />
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(currentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>

       
        <div class="modal fade" id="editContactModal" tabindex="-1" aria-labelledby="editContactModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Contact</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editContactForm">
                            <input type="hidden" id="editContactId" />

                            <div class="row mb-3">
                                <div class="col">
                                    <label>First Name</label>
                                    <input type="text" id="editFirstName" class="form-control" />
                                </div>
                                <div class="col">
                                    <label>Last Name</label>
                                    <input type="text" id="editLastName" class="form-control" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label>Email</label>
                                <input type="email" id="editEmail" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label>Phone</label>
                                <input type="text" id="editPhone" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label>Title</label>
                                <input type="text" id="editTitle" class="form-control" />
                            </div>
                            

                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">No contacts to display.</div>
    }
</div>

@section Scripts {
    <script>
        $(document).on('click', '.edit-icon', function () {
            const $el = $(this);
            $('#editContactId').val($el.data('id'));
            $('#editFirstName').val($el.data('firstname'));
            $('#editLastName').val($el.data('lastname'));
            $('#editPhone').val($el.data('phone'));
            $('#editEmail').val($el.data('email'));
            $('#editTitle').val($el.data('title'));
        });
        $('#editContactForm').on('submit', function (e) {
            e.preventDefault();

            const updatedContact = {
                Id: $('#editContactId').val(),
                FirstName: $('#editFirstName').val(),
                LastName: $('#editLastName').val(),
                Phone: $('#editPhone').val(),
                Email: $('#editEmail').val(),
                Title: $('#editTitle').val(),
            };

            $.ajax({
                url: '/Data/UpdateContact',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(updatedContact),
                success: function (response) {
                    if (response.success) {
                        alert('Contact updated successfully!');
                        const row = $('td').filter(function () {
                            return $(this).text() === updatedContact.Id;
                        }).closest('tr');
                        row.find('td:eq(1)').text(updatedContact.FirstName);
                        row.find('td:eq(2)').text(updatedContact.LastName);
                        row.find('td:eq(3)').text(updatedContact.Phone);
                        row.find('td:eq(4)').text(updatedContact.Email);
                        row.find('td:eq(5)').text(updatedContact.Title);
                        $('#editContactModal').modal('hide');
                    } else {
                        alert('Update failed: ' + response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while updating contact.');
                }
            });
        });
    </script>
}
