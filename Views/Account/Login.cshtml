@model SalesforceIntegrationApp.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - SalesforceIntegrationApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .login-card {
            background-color: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .form-label {
            font-weight: 500;
        }

        .social-btn i {
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6 d-none d-lg-flex justify-content-center">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Login image" style="max-height: 500px;">
            </div>
            <div class="col-lg-6 d-flex justify-content-center">
                <div class="login-card w-75">
                    <h2 class="mb-4 text-center">Login</h2>

                    <div class="d-flex justify-content-center mb-3">
                        <button type="button" class="btn btn-outline-primary rounded-circle mx-1 social-btn"><i class="fab fa-facebook-f"></i></button>
                        <button type="button" class="btn btn-outline-primary rounded-circle mx-1 social-btn"><i class="fab fa-twitter"></i></button>
                        <button type="button" class="btn btn-outline-primary rounded-circle mx-1 social-btn"><i class="fab fa-linkedin-in"></i></button>
                    </div>

                    <div class="text-center mb-3">OR</div>

                    <form asp-action="Login" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a href="#" class="text-decoration-none">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <p class="text-center mt-3">
                            Don't have an account?
                            <a asp-action="Register" class="link-danger text-decoration-none">Register</a>
                        </p>

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger mt-3">@TempData["Error"]</div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>



